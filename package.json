{
  "name": "dawdle-server",
  "version": "0.1.0",
  "author": "Nikolay Stoynov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arvigeus/dawdle.git"
  },
  "bugs": {
    "url": "https://github.com/arvigeus/dawdle/issues"
  },
  "description": "A social framework for building friendships",
  "homepage": "https://github.com/arvigeus/dawdle#readme",
  "keywords": ["chat", "messages", "friends"],
  "main": "src/index.js",
  "scripts": {
    "start": "rimraf ./build && webpack --mode development",
    "precommit": "lint-staged",
    "lint": "eslint --ignore-path .gitignore ."
  },
  "lint-staged": {
    "*.{js,json,graphql,md}": ["prettier --write", "git add"]
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "transform-optional-chaining"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 7
    },
    "extends": ["node", "esnext"],
    "plugins": ["import", "babel"],
    "rules": {
      "import/no-nodejs-modules": "off",
      "no-console": [
        "error",
        {
          "allow": ["warn", "error", "info"]
        }
      ],
      "no-unused-vars": "warn"
    },
    "settings": {
      "import/resolver": "webpack"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.40",
    "@babel/node": "^7.0.0-beta.40",
    "@babel/polyfill": "^7.0.0-beta.40",
    "@babel/preset-env": "^7.0.0-beta.40",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^8.0.0-beta.2",
    "babel-plugin-transform-optional-chaining": "^7.0.0-beta.3",
    "dotenv-webpack": "^1.5.5",
    "eslint": "^4.18.1",
    "eslint-config-esnext": "^2.0.0",
    "eslint-config-node": "^2.0.0",
    "eslint-import-resolver-webpack": "^0.8.4",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-import": "^2.9.0",
    "husky": "^0.14.3",
    "koa": "^2.5.0",
    "lint-staged": "^7.0.0",
    "nodemon-webpack-plugin": "^0.1.6",
    "prettier": "^1.11.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.0.1",
    "webpack-bundle-analyzer": "^2.11.0",
    "webpack-cli": "^2.0.9",
    "webpack-node-externals": "^1.6.0"
  },
  "dependencies": {
    "@koa/cors": "^2.2.1",
    "apollo-server-koa": "^1.3.2",
    "bcrypt": "^1.0.3",
    "cron": "^1.3.0",
    "crypto-promise": "^2.0.0",
    "graphql": "^0.13.1",
    "graphql-iso-date": "^3.5.0",
    "jsonwebtoken": "^8.1.1",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.4.0",
    "pg": "^7.4.1",
    "recaptcha-validator": "^2.0.0",
    "sequelize": "^4.35.0"
  }
}
